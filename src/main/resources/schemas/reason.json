{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "The reason in line item.",
  "properties": {
    "isFreeTextAllowed": {
      "type": "boolean",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "id": {
      "type": "string",
      "required": false
    },
    "reasonType": {
      "type": "string",
      "required": true,
      "enum": [
        "CREDIT",
        "DEBIT",
        "BALANCE_ADJUSTMENT"
      ]
    },
    "reasonCategory": {
      "type": "string",
      "required": true,
      "enum": [
        "AD_HOC",
        "ADJUSTMENT",
        "PHYSICAL_INVENTORY"
      ]
    }
  }
}